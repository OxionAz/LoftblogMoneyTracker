<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/tools"
              android:id="@+id/statistic_view"
              style="@style/Container"
              android:background="@android:color/transparent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        card_view:cardCornerRadius="@dimen/radius">

        <RelativeLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <lecho.lib.hellocharts.view.PieChartView
            android:id="@+id/chart"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/large_diagram_height"/>

            <android.support.v7.widget.RecyclerView
                android:layout_below="@id/chart"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:id="@+id/recycler_view_content"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <TextView
        android:id="@+id/statistic_text"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/alert_dialog_button_min_width"
        android:textSize="@dimen/big_main_text"
        android:textStyle="bold"
        android:text="@string/statistic_null_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/add_button"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="@dimen/login_button_width"
            android:background="@color/primary"
            android:layout_width="@dimen/button_margin_top"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/statistic_add_text"/>

    </android.support.v7.widget.CardView>

</LinearLayout>