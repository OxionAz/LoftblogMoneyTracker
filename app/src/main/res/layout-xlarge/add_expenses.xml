<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Container.Background">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/add_expense_card"
        android:layout_width="@dimen/card_weight"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_login_margin"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:cardBackgroundColor="@color/white">

        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/activity_vertical_margin"
                    android:id="@+id/addExpenseGrid"
                    android:columnCount="@integer/row_count_land"
                    android:rowCount="@integer/row_count">
            <TextView
                android:id="@+id/name_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="start|center"
                android:textSize="@dimen/small_main_text"
                android:text="@string/tovar"
                />

            <EditText
                android:id="@+id/etName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_height"
                android:layout_columnSpan="@integer/column_count"
                android:layout_gravity="fill|bottom"
                android:inputType="textNoSuggestions"
                android:textStyle="italic"
                android:textSize="@dimen/small_main_text"
                android:hint="@string/hint_text_name"
                />

            <TextView
                android:id="@+id/sum_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="start|center"
                android:textSize="@dimen/small_main_text"
                android:text="@string/summa"
                />

            <EditText
                android:id="@+id/etPrice"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_height"
                android:layout_columnSpan="@integer/column_count"
                android:layout_gravity="fill|bottom"
                android:inputType="numberDecimal|textNoSuggestions"
                android:textStyle="italic"
                android:textSize="@dimen/small_main_text"
                android:hint="@string/hint_text_sum"
                />

            <TextView
                android:id="@+id/cat_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="start|center"
                android:textSize="@dimen/small_main_text"
                android:text="@string/kategotiya"
                />

            <Spinner
                android:id="@+id/etCategory"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_height"
                android:layout_columnSpan="@integer/column_count"
                android:layout_gravity="fill"
                android:spinnerMode="dropdown"
                />

            <TextView
                android:id="@+id/d_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:gravity="start|center"
                android:textSize="@dimen/small_main_text"
                android:text="@string/data"
                />

            <TextView
                android:id="@+id/etDate"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/content_height"
                android:layout_gravity="fill"
                android:gravity="start|center"
                android:textStyle="italic"
                android:textSize="@dimen/small_main_text"
                android:hint="@string/segodnya"
                />
            <Button
                android:id="@+id/date_picker_day"
                android:layout_gravity="end|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/primary"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/add_date"/>

        </GridLayout>

        <Button
            android:layout_marginTop="@dimen/button_margin_top"
            android:id="@+id/add_expense_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="@string/add_expense"
            android:textColor="@color/white"
            android:background="@color/primary"/>

    </android.support.v7.widget.CardView>

</LinearLayout>