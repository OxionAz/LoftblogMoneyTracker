<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/moneytracker</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Container.Background">
        <item name="android:background">@drawable/background_3</item>
    </style>

    <style name="Fragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LoginAndRegEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_height</item>
        <item name="android:textSize">@dimen/small_main_text</item>
        <item name="android:maxLength">@integer/max_length</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:hint">@string/text_login</item>
    </style>

    <style name="LoginAndRegEditText.Password">
        <item name="android:inputType">textNoSuggestions|textPassword</item>
        <item name="android:hint">@string/text_password</item>
    </style>

</resources>
