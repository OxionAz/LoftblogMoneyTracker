<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorAccent">@color/primary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/LoftActionMode</item>
    </style>

    <style name="MaterialAnimations" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions" tools:targetApi="lollipop">true</item>
    </style>

    <style name="splashScreenTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/moneytracker</item>
    </style>

    <style name="Container">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Container.Background">
        <item name="android:background">@drawable/background_vertical</item>
    </style>

    <style name="Container_Land">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@drawable/background_land</item>
    </style>

    <style name="Fragments">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="LoginAndRegEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/content_height</item>
        <item name="android:textSize">@dimen/small_main_text</item>
        <item name="android:maxLength">@integer/max_length</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:hint">@string/text_login</item>
    </style>

    <style name="LoginAndRegEditText.Password">
        <item name="android:inputType">textNoSuggestions|textPassword</item>
        <item name="android:hint">@string/text_password</item>
    </style>

    <style name="LoftActionMode" parent="Base.Widget.AppCompat.ActionMode">
        <item name="background">@color/primary</item>
        <item name="backgroundSplit">@color/primary</item>
    </style>

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AlertDialogCategoriesAdd">
        <item name="@android:windowEnterAnimation">@anim/from_dialog_add</item>
        <item name="@android:windowExitAnimation">@anim/to_dialog_add</item>
    </style>

    <style name="AlertDialogCategoriesDel">
        <item name="@android:windowEnterAnimation">@anim/from_dialog_del</item>
        <item name="@android:windowExitAnimation">@anim/to_dialog_del</item>
    </style>

</resources>