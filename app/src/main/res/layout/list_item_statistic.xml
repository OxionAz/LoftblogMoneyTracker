<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ru.loftschool.loftblogmoneytracker.ui.view.Oval
        android:id="@+id/color_oval"
        android:layout_width="@dimen/oval_size"
        android:layout_height="@dimen/oval_size"
        android:layout_margin="@dimen/item_margin_top"/>

    <TextView
        android:id="@+id/name_text"
        android:textSize="@dimen/normal_main_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_text"/>

    <TextView
        android:id="@+id/sum_text"
        android:textSize="@dimen/normal_main_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/sum_text"/>

    </LinearLayout>