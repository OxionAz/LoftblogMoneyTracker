<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:background="@color/white"
    card_view:cardCornerRadius="@dimen/radius">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:columnCount="2"
        android:rowCount="3">

        <TextView
            android:id="@+id/dialog_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="@string/alert_dialog_text_title"
            android:textColor="@android:color/black"
            android:layout_columnSpan="2"/>

        <EditText
            android:id="@+id/dialog_category_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="@integer/max_length"
            android:inputType="textNoSuggestions"
            android:layout_marginBottom="@dimen/border_margin"
            android:layout_columnSpan="2"/>

        <Button
            android:id="@+id/dialog_category_cancelButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="end"
            android:shadowColor="@android:color/transparent"
            android:text="@string/alert_dialog_text_cancel"
            android:textColor="@color/primary"/>

        <Button
            android:id="@+id/dialog_category_okButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:shadowColor="@android:color/transparent"
            android:layout_gravity="end"
            android:text="@string/alert_dialog_text_add"
            android:textColor="@color/primary"/>

    </GridLayout>

</android.support.v7.widget.CardView>