<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/login_content"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/Container.Background">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_login_margin"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:cardBackgroundColor="@color/white">

        <GridLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/drawer_paddingTop"
                    android:id="@+id/registrationGrid"
                    android:columnCount="@integer/column_count"
                    android:rowCount="@integer/row_count">

            <ImageView
                android:id="@+id/icon"
                android:layout_gravity="center"
                android:layout_width="@dimen/image"
                android:layout_height="@dimen/image"
                android:layout_marginBottom="@dimen/radius"
                android:src="@mipmap/ic_launcher"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/loginWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etLogin"
                    style="@style/LoginAndRegEditText"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/passwordWrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etPassword"
                    style="@style/LoginAndRegEditText.Password"
                    />

            </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/login_button"
            android:layout_marginTop="@dimen/border_margin"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/login_button"/>

    </GridLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
        android:gravity="bottom">

    <Button
        android:id="@+id/registration_button"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_gravity="clip_horizontal"
        android:text="@string/login_button_register"/>

    </RelativeLayout>

</LinearLayout>