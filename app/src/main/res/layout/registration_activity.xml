<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/registration_content"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              style="@style/Container.Background">

    <include layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_login_margin"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:contentPadding="@dimen/activity_horizontal_margin"
        card_view:cardBackgroundColor="@color/white">

    <GridLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/registrationGrid"
                android:columnCount="1"
                android:rowCount="4">

        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center"
            android:layout_width="@dimen/image"
            android:layout_height="@dimen/image"
            android:layout_marginBottom="@dimen/radius"
            android:src="@mipmap/ic_launcher"/>

        <EditText
            android:id="@+id/etLogin"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/content_height"
            android:layout_gravity="fill|bottom"
            android:textSize="@dimen/small_main_text"
            android:maxLength="20"
            android:hint="@string/hint_text_login"
            />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/content_height"
            android:layout_gravity="fill|bottom"
            android:inputType="textPassword"
            android:maxLength="20"
            android:textSize="@dimen/small_main_text"
            android:hint="@string/hint_text_password"
            />

        <Button
            android:id="@+id/registration_button"
            android:layout_marginTop="@dimen/border_margin"
            android:background="@color/primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/registration_button"/>
    </GridLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>